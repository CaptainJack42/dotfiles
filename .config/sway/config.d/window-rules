################# assign applications to workspaces 
# Spotify on 12
for_window [class="Spotify"] move to workspace number 12:[F2]
for_window [class="^Spotify$"] floating disable; assign workspace number 12:[F2]

# KDE connect app
for_window [app_id="kdeconnect"] move scratchpad

# Easyeffects
for_window [app_id="easyeffects"] move scratchpad

# Open Social club in floating window
for_window [app_id="socialclubhelper.exe"] floating enable

for_window [class="^Spotify$"] floating disable
for_window [class="^Vlc$"] floating disable

for_window [title="Picture-in-Picture"] floating enable
for_window [title="Picture-in-Picture"] sticky enable

for_window [title="Copying"] floating enable
for_window [title="Deleting"] floating enable
for_window [title="Moving"] floating enable

# for_window [window_role="^gimp-toolbox-color-dialog$"] floating enable
for_window [window_role="pop-up"] floating enable
for_window [window_role="^Preferences$"] floating enable
for_window [window_role="setup"] floating enable

